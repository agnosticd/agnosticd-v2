---
apiVersion: v1
kind: Service
metadata:
  name: "{{ svcname }}"
  namespace: {{ ai_ocp_namespace }}
  annotations:
    metallb.universe.tf/allow-shared-ip: svc-{{ guid }}
spec:
  ports:
  - name: api
    port: 6443
    protocol: TCP
    targetPort: 6443
  - name: apps
    port: 443
    protocol: TCP
    targetPort: 443
  - name: http
    port: 80
    protocol: TCP
    targetPort: 80
  selector:
    role: control-plane
  type: LoadBalancer
