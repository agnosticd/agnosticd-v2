Host *
{% if cloud_provider == 'aws' %}
  User ec2-user
{% endif %}
{% if cloud_provider == 'gcp' %}
  User gcpuser
{% endif %}
  IdentityFile ~/.ssh/{{ guid }}key.pem
  ForwardAgent yes
  StrictHostKeyChecking no
  ConnectTimeout 600
  ConnectionAttempts 10
  ControlMaster auto
  ControlPath /tmp/%h-%r
  ControlPersist 5m
